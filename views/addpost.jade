extends layout

block content
	h1=title
	ul.errors
		if errors
			each error,i in errors
				li.alert.alert-danger #{error.msg}
	form(method='post',action='/posts/add',enctype='multipart/form-data')
		.form-group
			label Title
			input.form-control(name='title',type='text')
		.form-group
			label Author
			textarea.form-control(name='author',type='text')
		.form-group
			label Main Image:
			input.form-control(name='mainimage',type='file',required)
		input.btn.btn-default(name='submit',type='submit',value='Save')